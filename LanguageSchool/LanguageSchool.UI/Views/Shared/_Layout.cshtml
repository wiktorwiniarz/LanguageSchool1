<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Language School</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/4f181a5240.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500,700,900&display=swap&subset=latin-ext" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container d-flex">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Language School</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
               
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item active">
                            <a class="nav-link text-white" asp-area="" asp-controller="Course" asp-action="Index">Kursy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Course" asp-action="Add">Dodaj kurs</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" href="#">O Nas</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="e" rolw="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Oferta
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Zajęcia indywidualne</a>
                                <a class="dropdown-item" href="#">Zajęcia grupowe</a>
                                <a class="dropdown-item" href="#">Kursy dla firm</a>
                                <a class="dropdown-item" href="#">Tłumaczenia</a>
                                <a class="dropdown-item" href="#">Egzaminy</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Oferta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Cennik</a>
                        </li>
                        <li class="nav-item dropdown ml-auto">
                            <a class="nav-link dropdown-toggle text-white" href="#" id="e" rolw="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Konto
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Rejestracja</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Zaloguj</a>


                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container d-flex justify-content-end">
            <div class="container d-flex justify-content-lg-start">
            <a class="pull-left"> <p>&copy; @DateTime.Now.Year - Language School</p></a>
            </div>
            <a class="pull-right" href="www.facebook.com">
                <i class="fab fa-facebook-f fa-fw"></i>
            </a>
            <a class="pull-right" href="www.twitter.com">
                <i class="fab fa-twitter fa-fw"></i>
            </a>
            <a class="pull-right" href="www.linkedin.com">
                <i class="fab fa-linkedin-in fa-fw"></i>
            </a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
